.container
	&-fluid
		clearfix()
		
		h1
			font-size 1.8rem
	
	&-login
		background-color #fff
		border-radius 5px
		box-shadow 0px 0px 5px 0px rgba(0,0,0,0.25)
		left 50%
		margin 0 auto
		max-width 54rem
		opacity 0
		padding 5rem 1rem 1rem
		position absolute
		text-align center
		top 50%
		transform scale(0.5) translate3d(-50%,-45%,0)
		transition 0.3s all cubic-bezier(.8,-0.6,0.2,1.5)
		width 90%
		z-index 4
		
		&.loaded
			opacity 0.999
			transform scale(1) translate3d(-50%,-50%,0)

		.logo
			height auto
			margin 2rem auto
			width 17.5rem
			
			img
				img-responsive(block)
				width 100%


	&-ot
		// background-color white
		clearfix()
		padding 0.5rem
		text-align center

@media (min-width: $screen-sm)
	.container
		&-login
			// position absolute
			padding 1rem 7rem
			right 9rem
			top 50%
			transform scale(0.5) translateY(-45%)
			z-index 3
			
			&.loaded
				opacity 0.999
				transform scale(1) translateY(-50%)


			
			.icon-float
				display block
				left auto
				right -4.9rem
				top 50%
				transform translateY(-50%)
				
		&-fluid
			h1
				font-size 3.6rem
				
		
		&-ot
			padding 0rem 2rem
			